{
    "version": "2.0.0",
    "tasks": [

{
    "label": "Generate Flutter Feature Structure",
    "type": "shell",
    "command": "dart",
    "args": [
        "${workspaceFolder}/scripts/generate_feature.dart",
        "${input:featureName}"
    ],
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher": [],
    "detail": "Generate complete feature structure with data source, repository, cubit, and states"
},
      {
    "label": "Change Flutter Launcher Icon (Complete)",
    "type": "shell",
    "command": "flutter pub add --dev flutter_launcher_icons && echo 'flutter_launcher_icons:\n  android: true\n  ios: true\n  image_path: \"${input:iconPath}\"' >> pubspec.yaml && flutter pub get && flutter pub run flutter_launcher_icons && flutter clean",
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher": [],
    "detail": "Complete process: Add package, configure, generate icon, and clean"
},
      {
    "label": "Rename Flutter App",
    "type": "shell",
    "command": "dart",
    "args": [
        "pub",
        "global",
        "run",
        "rename",
        "setAppName",
        "--targets",
        "android,ios",
        "--value",
        "${input:newAppName}"
    ],
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher": [],
    "detail": "Rename the Flutter app display name for Android and iOS"
},
{
    "label": "Set Bundle ID / Package Name",
    "type": "shell",
    "command": "dart",
    "args": [
        "pub",
        "global",
        "run",
        "rename",
        "setBundleId",
        "--targets",
        "android,ios",
        "--value",
        "${input:newBundleId}"
    ],
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher": [],
    "detail": "Set the bundle ID for iOS and package name for Android"
},
{
    "label": "Install Rename Package",
    "type": "shell",
    "command": "dart",
    "args": [
        "pub",
        "global",
        "activate",
        "rename"
    ],
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher": [],
    "detail": "Install the rename package globally"
},
